 	.ndo_start_xmit		 = ipoib_start_xmit,
 	.ndo_select_queue	 = ipoib_select_queue_sw_rss,
 	.ndo_tx_timeout		 = ipoib_timeout_rss,
 	.ndo_get_stats		 = ipoib_get_stats_rss,
 	.ndo_set_rx_mode	 = ipoib_set_mcast_list,
+#ifdef HAVE_NDO_GET_IFLINK
